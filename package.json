{
  "name": "@yivan-lab/pretty-please",
  "version": "1.5.5",
  "description": "AI 驱动的命令行工具，将自然语言转换为可执行的 Shell 命令",
  "type": "module",
  "bin": {
    "pls": "./dist/bin/pls.js",
    "please": "./dist/bin/pls.js"
  },
  "scripts": {
    "dev": "tsx bin/pls.tsx",
    "build": "tsc && node scripts/postbuild.js",
    "start": "node dist/bin/pls.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "link:dev": "mkdir -p ~/.local/bin && ln -sf \"$(pwd)/bin/pls.tsx\" ~/.local/bin/pls-dev && echo '✅ pls-dev 已链接到 ~/.local/bin/pls-dev'",
    "unlink:dev": "rm -f ~/.local/bin/pls-dev && echo '✅ pls-dev 已移除'",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "cli",
    "ai",
    "shell",
    "openai",
    "command-line",
    "natural-language",
    "terminal",
    "assistant",
    "mastra",
    "deepseek"
  ],
  "author": "yivan-lab",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/IvanLark/pretty-please.git"
  },
  "bugs": {
    "url": "https://github.com/IvanLark/pretty-please/issues"
  },
  "homepage": "https://github.com/IvanLark/pretty-please#readme",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "bin",
    "dist/bin",
    "dist/src",
    "dist/package.json",
    "src",
    "README.md",
    "LICENSE",
    "tsconfig.json"
  ],
  "dependencies": {
    "@mastra/core": "^0.24.8",
    "chalk": "^5.6.2",
    "cli-highlight": "^2.1.11",
    "commander": "^14.0.2",
    "detect-package-manager": "^3.0.2",
    "ink": "^6.5.1",
    "ink-box": "^2.0.0",
    "ink-markdown": "^1.0.4",
    "ink-select-input": "^6.2.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "lowlight": "^3.3.0",
    "marked": "^17.0.1",
    "react": "^19.2.3",
    "shiki": "^3.20.0",
    "string-width": "^8.1.0",
    "wrap-ansi": "^9.0.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/hast": "^3.0.4",
    "@types/node": "^25.0.2",
    "@types/react": "^19.2.7",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "react-devtools-core": "^7.0.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
